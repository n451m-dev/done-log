{
    "name": "DoneLog",
    "description": "Seamlessly manage tasks, sync with Google Sheets, get inspired with motivational quotes. Click or Ctrl+Shift+L for instant access",
    "version": "0.0.1",
    "manifest_version": 3,
    "background": {
      "service_worker": "background.js"
    },
      "action": {
        "default_icon": {
            "128": "./icons/icon128.png"
          }
      },
      "icons": {
        "32": "./icons/icon32.png",
        "48": "./icons/icon48.png",
        "128": "./icons/icon128.png"
      },
      "permissions": [
        "activeTab", "identity", "contextMenus", "commands"
      ],
      "oauth2": {
        "client_id": "",
        "scopes": [
          "https://www.googleapis.com/auth/spreadsheets"
        ]
      },
      "content_scripts": [
        {
          "matches": ["https://*/todos.html"],
          "js": [
            "todos.js",
            "spreadsheet.js"
          ]
        }
      ],
      "commands": {
        "openDoneLog": {
          "suggested_key": {
            "default": "Ctrl+Shift+L" 
          },
          "description": "Open DoneLog"
        }
      },
    "author": "Nasim",
    "key": ""
  }
  
